{
  "name": "Long Live Onliner.by",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "Created by Aliaksei blackredprince@gmail.com",
  "homepage_url": "https://github.com/daigotsu/llo",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",

  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Onliner.by currency changer",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "contentSettings",
    "storage"
  ],
  "background":{
    "scripts":["src/browser_action/browser_action.js"]
  },
  "web_accessible_resources": ["src/inject/inject.js", "src/inject/21vek.js"],
  "content_scripts": [
    {
      "matches": [
        "http://www.onliner.ru/*",
        "https://www.onliner.ru/*",
        "http://onliner.ru/*",
        "https://onliner.ru/*",
        "http://www.21vek.by/*",
        "http://localhost/*"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    },
    {
      "matches": [
        "https://www.google.by/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}